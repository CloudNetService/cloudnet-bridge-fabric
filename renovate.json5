{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
  ],
  "labels": [
    "t: dependencies",
  ],
  "reviewers": [
    "0utplay",
    "derklaro",
  ],
  "packageRules": [
    {
      "matchManagers": [
        "github-actions",
      ],
      "groupName": "github actions",
    },
    {
      "matchUpdateTypes": [
        "patch",
      ],
      "matchPackageNames": [
        "*",
        "!gradle",
      ],
      "groupName": "all dependencies with patch changes",
    },
    {
      "matchPackageNames": [
        "legacy-looming:**",
        "net.fabricmc.fabric-loom**",
      ],
      "groupName": "the loom plugins",
    },
    {
      "description": "Disable major/minor/patch updates for yarn",
      "matchPackageNames": [
        "net.fabricmc:yarn",
        "net.legacyfabric:yarn",
      ],
      "matchUpdateTypes": [
        "major",
        "minor",
        "patch",
      ],
      "enabled": false,
    },
    {
      "description": "Dependencies whose updates shouldn't be done automatically",
      "matchPackageNames": [
        "com.mojang:**", // cannot be updated automatically
      ],
      "enabled": false,
    },
  ],
  "prHourlyLimit": 10,
  "rebaseWhen": "conflicted",
  "rebaseLabel": "s: rebase",
  "stopUpdatingLabel": "s: stop updates",
  "commitMessagePrefix": "chore: ",
  "commitMessageAction": "update",
}
